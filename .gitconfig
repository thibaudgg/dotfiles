[user]
  name = Thibaud Guillaume-Gentil
  email = thibaud@thibaud.me

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  df = diff
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[github]
  user = thibaudgg
  # From OS X Keychain
  token = !security find-generic-password -gs \"GitHub API Token\" 2>&1 >/dev/null | awk '/password/ {print $2}' | tr -d \\\"

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf = input
  quotepath = false
  editor = subl -n -w

[apply]
  whitespace = fix

[mergetool]
  keepBackup = false

[push]
  default = simple

[heroku]
  account = personal
